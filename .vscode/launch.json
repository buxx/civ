{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'server'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=server",
                    "--package=civ_server"
                ],
                "filter": {
                    "name": "server",
                    "kind": "bin"
                }
            },
            "args": [
                "world",
                "--snapshot=snapshot",
                "--snapshot-interval=100"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'gui'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=gui",
                    "--package=civ_gui"
                ],
                "filter": {
                    "name": "gui",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tui'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tui",
                    "--package=civ_tui"
                ],
                "filter": {
                    "name": "tui",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example map_display",
            "cargo": {
                "args": [
                    "build",
                    "--example=map_display",
                    "--package=civ_gui"
                ],
                "filter": {
                    "name": "map_display",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${userHome}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/x86_64-unknown-linux-gnu/lib/"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example embedded",
            "cargo": {
                "args": [
                    "build",
                    "--example=embedded",
                    "--package=civ_gui"
                ],
                "filter": {
                    "name": "embedded",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${userHome}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/x86_64-unknown-linux-gnu/lib/",
                "RUST_LOG": "civ_server=INFO,civ_gui=INFO"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug example massive",
            "cargo": {
                "args": [
                    "build",
                    "--example=massive",
                    "--package=civ_gui"
                ],
                "filter": {
                    "name": "massive",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:${userHome}/.rustup/toolchains/stable-x86_64-unknown-linux-gnu/lib/rustlib/x86_64-unknown-linux-gnu/lib/",
                "RUST_LOG": "civ_server=INFO,civ_gui=INFO"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'server'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=server",
                    "--package=civ_server"
                ],
                "filter": {
                    "name": "server",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'gui'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=gui",
                    "--package=civ_gui"
                ],
                "filter": {
                    "name": "gui",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug"
            },
        }
    ]
}